<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pockwester.forge"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.pockwester.forge.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pockwester.forge.CourseIndexActivity"
            android:label="@string/title_activity_class_index" >
        </activity>
        <activity
            android:name="com.pockwester.forge.SearchCourseActivity"
            android:label="Course Search" >
        </activity>

        <provider
            android:name="com.pockwester.forge.ForgeProvider"
            android:authorities="com.pockwester.forge.provider" />

        <service
            android:name="com.pockwester.forge.DBSyncService"
            android:label="DBSyncService" >
        </service>

        <activity
            android:name="com.pockwester.forge.CourseDetailActivity"
            android:label="@string/title_activity_course_detail" >
        </activity>
    </application>

</manifest>
